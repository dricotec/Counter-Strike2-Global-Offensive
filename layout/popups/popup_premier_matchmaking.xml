<root>
	<styles>
		<include src="file://{resources}/styles/gamestyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/popups/popup_premier_matchmaking.css" />
	</styles>
	
	<scripts>
		<include src="file://{resources}/scripts/popups/popup_premier_matchmaking.js" />
	</scripts>

	<PopupCustomLayout class="PopupPanel Hidden" popupbackground="dim" onload="">
		<Label class="PopupTitle" text="Welcome to Premier"/>

		<Panel class="popup-premier-title-container">
			<Label class="popup-premier-desc" text="Premier mode in CS2:GO features a ranked rating system, skill-based matchmaking, seasonal ranks, progression tracking, performance impact, win-loss influence, and competitive matchmaking for balanced, intense gameplay." />
		</Panel>

		<Panel class="PopupButtonRow">
			<TextButton class="PopupButton" text="Ready to Play" onactivate="PopupPremierMatchmaking.OnOkPressed()" />
		</Panel>
	</PopupCustomLayout>
</root>
